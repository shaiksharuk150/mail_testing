      <a href="https://yourdomain.com/unsubscribe?email=<%= manager.email %>"
         style="font-size: 13px; color: #ffffff; background-color: #e74c3c; text-decoration: none; padding: 10px 20px; border-radius: 6px; display: inline-block;">
        Unsubscribe
      </a>
    </div>

    <!-- Footer -->
    <div style="background-color: #f4f4f4; padding: 16px; text-align: center;">
